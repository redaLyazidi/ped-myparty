<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/summery_party" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/method"
        android:textSize="25sp" />
    
    <TextView android:id="@+id/result" 
        android:padding="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/method"
        android:textSize="15sp" />
    
    <Button android:text="@string/scan"
        android:padding="30dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="launchScanner"
    />
    
     <Button android:padding="30dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/manual"
        android:onClick="launchManualInput"
    />
    
    <TextView android:id="@+id/nb_scan" 
        android:padding="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/tickets_scanned"
        android:textSize="15sp" />
        
     <Button android:padding="30dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/refresh"
        android:onClick="refreshNbScan"
    />
    
</LinearLayout>