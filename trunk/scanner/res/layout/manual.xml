<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="30dip"
    android:id="@+id/screen" android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:gravity="center">

<TextView 
    android:padding="5dip"
    android:id="@+id/title" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:text="Id client"
    android:textSize="20sp"
    android:layout_gravity="center" />

<EditText android:id="@+id/id_customer" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:padding="20dip" 
    android:onClick="clearField"
    android:layout_gravity="center" />

<TextView 
    android:padding="5dip"
    android:id="@+id/label_customer" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:text="Id billet"
    android:textSize="20sp"
    android:layout_gravity="center" />
    
<EditText android:padding="20dip"
    android:id="@+id/id_party" 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:onClick="clearField"
    android:layout_gravity="center" />

</LinearLayout>