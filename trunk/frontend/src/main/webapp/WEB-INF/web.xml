<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>myparty-frontend</display-name>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
<listener>
<listener-class>com.sun.faces.config.ConfigureListener</listener-class>
 </listener>


  <filter>
 <filter-name>PrimeFaces FileUpload Filter</filter-name>
 <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
 <init-param>
  <param-name>thresholdSize</param-name>
  <param-value>51200</param-value>
 </init-param>       
</filter>
<filter-mapping>
 <filter-name>PrimeFaces FileUpload Filter</filter-name>
 <servlet-name>Faces Servlet</servlet-name>
</filter-mapping>

<!--  Dummy servlet to get the context -->
<servlet>
  <servlet-name>My Servlet</servlet-name>
  <servlet-class>net.ped.shared.MyHttpServlet</servlet-class>
  <load-on-startup>0</load-on-startup>
</servlet>

<!-- proxy for images -->
<servlet>
 <servlet-name>Images Proxy</servlet-name>
 <servlet-class>net.ped.servlet.ImageProxy</servlet-class>
</servlet>

<servlet-mapping>
 <servlet-name>Images Proxy</servlet-name>
 <url-pattern>/imgUrl/*</url-pattern>
</servlet-mapping>

<!-- ticket editor static files (HTML/js) -->
<servlet-mapping>
	 <servlet-name>default</servlet-name>
	 <url-pattern>/ticket-designer/*</url-pattern>
</servlet-mapping>
 
<!-- ticket editor treatments -->
<servlet>
 <servlet-name>Save as</servlet-name>
 <servlet-class>net.ped.servlet.SaveAs</servlet-class>
</servlet>

<servlet-mapping>
 <servlet-name>Save as</servlet-name>
 <url-pattern>/saveas</url-pattern>
</servlet-mapping>

<servlet>
 <servlet-name>StoreSvgTickets</servlet-name>
 <servlet-class>net.ped.servlet.StoreSvgTickets</servlet-class>
</servlet>

<servlet-mapping>
 <servlet-name>StoreSvgTickets</servlet-name>
 <url-pattern>/storesvgtickets</url-pattern>
</servlet-mapping>

<servlet>
 <servlet-name>TicketPreview</servlet-name>
 <servlet-class>net.ped.servlet.TicketPreview</servlet-class>
</servlet>

<servlet-mapping>
 <servlet-name>TicketPreview</servlet-name>
 <url-pattern>/ticketpreview</url-pattern>
</servlet-mapping>

<servlet>
 <servlet-name>TicketCustomerRasterizer</servlet-name>
 <servlet-class>net.ped.servlet.TicketCustomerRasterizer</servlet-class>
</servlet>

<servlet-mapping>
 <servlet-name>TicketCustomerRasterizer</servlet-name>
 <url-pattern>/ticketcustomerrasterizer</url-pattern>
</servlet-mapping>

  <!-- Map these files with JSF -->
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>/faces/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.faces</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	
	<context-param>
	 <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
	 <param-value>server</param-value>
	</context-param>

	<context-param>  
	    <param-name>primefaces.THEME</param-name>  
	    <param-value>bootstrap</param-value>  
	</context-param>
	
	<!-- RESTEasy -->
	<listener>
		<listener-class>org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>Resteasy</servlet-name>
		<servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Resteasy</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	
	<context-param>
		<param-name>resteasy.scan</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<context-param>
		<param-name>resteasy.resources</param-name>
		<param-value>net.ped.service.rest.RestPartyService</param-value>
	</context-param>
	
	<context-param>
		<param-name>resteasy.servlet.mapping.prefix</param-name>
		<param-value>/rest</param-value>
	</context-param>
	
	<!-- ticketsDir -->
	<context-param>
		<param-name>ticketsDir</param-name>
		<param-value>resources/tickets/</param-value>
	</context-param>
	
	<!-- SVG QRcode TAG -->
	<context-param>
		<param-name>svgQRcodetag</param-name>
		<param-value>xlink:href="images/myparty/qrcode.png"</param-value>
	</context-param>
	
	<!-- Auto delete old files -->
	<listener>
	    <listener-class>net.ped.shared.BackgroundRessourceCleanerScheduler</listener-class>
	</listener>
</web-app>
